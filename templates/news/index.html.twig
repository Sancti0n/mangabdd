{% extends 'base.html.twig' %}

{% block title %}
    Liste des news
{% endblock %} 

{% block body %}
    <section class="row">
        {% for article in articles %}
        <article class="card text-white bg-primary mb-3 mr-3" style="max-width: 20rem;">
            <div class="card-header">{{ article.title }}</div>
            <div class="card-body">
                <div class="card-title">Écrit le {{ article.createdAt | date('d/m/Y' )}} à {{ article.createdAt | date('H:i') }}</div>
            </div>
            <div class="card-text ml-3">
                <img class="mb-3" src="{{ article.image }}" alt="image_news" width="70%">
                <div class="mb-3">{{ article.content | raw }}</div>
                <a href="{{ path('news_show', {'id' : article.id, 'title' : article.slug}) }}" class="btn btn-secondary mb-3">Lire la suite</a>
            </div>
        </article>
        {% endfor %}
    </section>
{% endblock %}