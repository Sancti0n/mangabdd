{% extends 'base.html.twig' %}

{% block title %}
    Création d'une news
{% endblock %}

{% form_theme formNews 'bootstrap_4_layout.html.twig' %}

{% block body %}

<h1>Création d'une news</h1>

{{ form_start(formNews) }}

{{ form_row(formNews.title, {'attr': {'placeholder': "Titre de la news"}}) }}

{{ form_row(formNews.content, {'attr': {'placeholder': "Contenu de la news"}}) }}

{{ form_row(formNews.image, {'attr': {'placeholder': "Image de la news"}}) }}

<button type="submit" class="btn btn-success">
    {% if editMode %}
    Enregistrer les modifications
    {% else %}
    Ajouter la news
    {% endif %}
</button>

{{ form_end(formNews) }}

{% endblock %}