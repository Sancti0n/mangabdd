{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="display-5">Connectez-vous</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <label for="username">Votre email :</label>
            <input type="text" placeholder="Email" required name="_username" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Votre mot de passe : </label>
            <input type="password" placeholder="Mot de passe" required name="_password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>
    </form>
{% endblock %}